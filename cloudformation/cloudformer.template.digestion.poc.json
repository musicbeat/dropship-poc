{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "tabledsorderhash": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "md5",
            "AttributeType": "S"
          },
          {
            "AttributeName": "partner-name",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "partner-name",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "md5",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "1",
          "WriteCapacityUnits": "1"
        }
      }
    },
    "s3digestionin": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "s3digestionwork": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "topicdsalarm": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "DisplayName": "ds-alarm",
        "Subscription": [
          {
            "Endpoint": "craig.thomas@bhnetwork.com",
            "Protocol": "email"
          }
        ]
      }
    },
    "snspolicydsalarm": {
      "Type": "AWS::SNS::TopicPolicy",
      "Properties": {
        "Topics": [
          {
            "Ref": "topicdsalarm"
          }
        ],
        "PolicyDocument": {
          "Version": "2008-10-17",
          "Id": "__default_policy_ID",
          "Statement": [
            {
              "Sid": "__default_statement_ID",
              "Effect": "Allow",
              "Principal": {
                "AWS": "*"
              },
              "Action": [
                "SNS:Subscribe",
                "SNS:ListSubscriptionsByTopic",
                "SNS:DeleteTopic",
                "SNS:GetTopicAttributes",
                "SNS:Publish",
                "SNS:RemovePermission",
                "SNS:AddPermission",
                "SNS:Receive",
                "SNS:SetTopicAttributes"
              ],
              "Resource": {
                "Ref": "topicdsalarm"
              },
              "Condition": {
                "StringEquals": {
                  "AWS:SourceOwner": "134529390395"
                }
              }
            }
          ]
        }
      }
    },
    "alarmdsorderhashReadCapacityUnitsLimitBasicAlarm": {
      "Type": "AWS::CloudWatch::Alarm",
      "Properties": {
        "ActionsEnabled": "true",
        "ComparisonOperator": "GreaterThanOrEqualToThreshold",
        "EvaluationPeriods": "12",
        "MetricName": "ConsumedReadCapacityUnits",
        "Namespace": "AWS/DynamoDB",
        "Period": "300",
        "Statistic": "Sum",
        "Threshold": "240.0",
        "AlarmActions": [
          "arn:aws:sns:us-west-2:134529390395:dynamodb"
        ],
        "Dimensions": [
          {
            "Name": "TableName",
            "Value": "ds-order-hash"
          }
        ]
      }
    },
    "alarmdsorderhashWriteCapacityUnitsLimitBasicAlarm": {
      "Type": "AWS::CloudWatch::Alarm",
      "Properties": {
        "ActionsEnabled": "true",
        "ComparisonOperator": "GreaterThanOrEqualToThreshold",
        "EvaluationPeriods": "12",
        "MetricName": "ConsumedWriteCapacityUnits",
        "Namespace": "AWS/DynamoDB",
        "Period": "300",
        "Statistic": "Sum",
        "Threshold": "240.0",
        "AlarmActions": [
          "arn:aws:sns:us-west-2:134529390395:dynamodb"
        ],
        "Dimensions": [
          {
            "Name": "TableName",
            "Value": "ds-order-hash"
          }
        ]
      }
    }
  },
  "Description": "Digestion POC Cloudformation"
}
